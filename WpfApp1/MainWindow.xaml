<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Management" Height="500" Width="900">
    <Grid>
        <StackPanel>
            <TextBlock Text="Вы: Иван" FontWeight="Bold" Margin="10" Width="100" FontSize="20"/>
            <TextBlock Text="Товары" Width="52" FontSize="10"/>

            <ListBox x:Name="ProductListBox" Margin="10" Height="200" Width="859"/>

            <Button Content="Добавить товар" Margin="10" Click="Click" Width="628"/>
            <TextBox x:Name="Sos" TextWrapping="Wrap" Text="Название товара" Width="120" TextChanged="TextBox_TextChanged"/>
            <TextBox x:Name="Sos_Копировать" TextWrapping="Wrap" Text="Какой товар" Width="90" TextChanged="TextBox_TextChanged2"/>
            <TextBox x:Name="So" TextWrapping="Wrap" Text="Какой производитель" Width="137" TextChanged="TextBox_TextChanged3"/>
            <TextBox x:Name="So_Копировать" TextWrapping="Wrap" Text="Сколько стоит" Width="100" TextChanged="TextBox_TextChanged4"/>
            <TextBox x:Name="So_Копировать1" TextWrapping="Wrap" Text="Остаток" Width="59" TextChanged="TextBox_TextChanged5"/>
        </StackPanel>
    </Grid>
</Window>
    